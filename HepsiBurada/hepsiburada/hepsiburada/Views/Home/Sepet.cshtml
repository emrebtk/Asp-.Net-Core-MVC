@model List<hepsiburada.Entity.Sepet>

@{
    Layout = "~/views/shared/_Layout.cshtml";
}

<table class="table">
    <tr>
       
        <td>Bilgisayar Markası</td>
        <td>Bilgisayar Fiyat</td>
        <td>Bilgisayar Miktar</td>
  


    </tr>
    @foreach (var item in Model)
    {
         <tr>
            <td>@item.name</td>
            <td>@item.fiyat</td>
            <td>@item.miktar</td> 
            <td>  <a href="@Url.Action("SepetSil","Home", new {id = item.id})" class="btn btn-danger">Sil</a></td>
            
          
        </tr>
    }
</table>